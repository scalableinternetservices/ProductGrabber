<h2 class="text-info">Show User</h2>
<br />

<strong>Your favorites listed below:</strong>

<% if @user.favorites.empty? %>
    No products added. You could add products now!.
<% else %>
    <% @user.favorites.each do |fav| %>
        <div class="row view-section">
          <div class="col-sm-3">
            <%= image_tag fav.product.photo_file_name, size:"200x200" %>
          </div>
          <div class="col-sm-9 view-section-details">
            <h3><%= link_to fav.product.name, fav.product %></h3>
            <p class="text-danger"><strong><%= number_to_currency(fav.product.price) %></strong></p>
            <p class="text-muted"><%= fav.product.description %></p>
            <%= link_to 'dislike it!', favorite_path(fav), method: 'delete' %>
          </div>
        </div>
    <% end %>
<% end %>

<div class="row">
	<div class="col-md-1">
		<h4><strong>Name: </strong></h4>
	</div>
	<div class="col-md-11">
		<h4><%= @user.name %></h4>
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-1">
		<h4><strong>Email: </strong></h4>
	</div>
	<div class="col-md-11">
		<h4><%= @user.email %></h4>
	</div>
</div>

<br /><br />
<%= link_to "Log out", logout_path, method: "delete" %> |
<%= link_to "Back", products_path%>

